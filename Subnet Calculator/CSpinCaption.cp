f (mText != inDescriptor) {		FocusDraw();		mText = inDescriptor;		// Force immediate update for use with Spin button		Rect	frame;		CalcLocalFrameRect(frame);		ApplyForeAndBackColors();		::EraseRect(&frame);		Draw(nil);	}}